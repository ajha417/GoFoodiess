<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SellerRegistrationActivity"
    android:gravity="center"
    android:background="@color/layout_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custome_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">


            <EditText
                android:id="@+id/sellername_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Full Name"
                android:textColorHint="@color/grey"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/shopName_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Shop Name"
                android:textColorHint="@color/grey"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/seller_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Email"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textColorHint="@color/grey"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/seller_phoneNo_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Phone No"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textColorHint="@color/grey"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/seller_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Password"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textColorHint="@color/grey"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/seller_cPassword_edittext"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:hint="Confirm Password"
                android:textSize="20dp"
                android:backgroundTint="@color/layout_color"
                android:textColorHint="@color/grey"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/seller_register_button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custome_edittext"
                android:text="Register"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>