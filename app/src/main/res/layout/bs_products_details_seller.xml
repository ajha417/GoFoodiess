<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtnIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/deleteBtnIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_delete"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/editBtnIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/deleteBtnIV"
            android:background="@null"
            android:src="@drawable/ic_baseline_edit_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/productIconIVV"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/purple_500"
        android:padding="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_baseline_add_shopping_whtie"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productIconIVV"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discountedNoteTv"
            android:background="@drawable/shape_rect05"
            android:padding="5dp"
            android:text="10% OFF"
            android:paddingEnd="5dp"
            android:textColor="@color/green"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/titleTVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Product Title"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/descriptionTVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Product Description"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/categoryTVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/quantityTVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/discountedPriceTVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.2"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/originalPriceTVV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.250"
                android:layout_toEndOf="@+id/discountedPriceTVV"
                android:textColor="@color/grey"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>