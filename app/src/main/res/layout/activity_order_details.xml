<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.OrderDetailsActivity">

<!--  Toolbar-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_rect01">

    <ImageButton
        android:id="@+id/backB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <ImageButton
        android:id="@+id/writeReview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_rate_white"
        android:layout_alignParentEnd="true"
        android:background="@null"
        />


  </RelativeLayout>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="3dp"
      app:contentPadding="5dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Order ID"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/orderidTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="1231221321"
            android:textColor="@color/black"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Order Date"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/datetvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="26/09/2022"
            android:textColor="@color/black"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Order Status: "
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/orderstatusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="In Progress"
            android:textStyle="bold"
            android:textColor="@color/green"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Shop Name: "
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/shopnamee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="Tea Post"
            android:textColor="@color/black"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Total Items: "
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/totalItemsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="@color/black"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Amount: "
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/amountt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="Rs. 783"
            android:textColor="@color/black"
            />
      </TableRow>
      <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Delivery Address: "
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/deliveryaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="RK University"
            android:textColor="@color/black"
            />
      </TableRow>
    </TableLayout>

  </androidx.cardview.widget.CardView>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Ordered Items"
      android:textAlignment="center"
      android:padding="7dp"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:background="@color/purple_500"/>
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/itemsRv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/row_ordereditem">

  </androidx.recyclerview.widget.RecyclerView>

  </LinearLayout>